    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/controller_main_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/controller_top_bar">

        <View
            android:id="@+id/controller_centerShim"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/controller_left_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/controller_centerShim">

            <TextView
                android:id="@+id/TV_controller_battery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="BATTERY"
                android:textStyle="bold"
                android:gravity="center"/>

            <io.netopen.hotbitmapgg.library.view.RingProgressBar
                android:id="@+id/progress_bar_controller_battery"
                android:layout_below="@id/TV_controller_battery"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                app:max="100"
                app:ringColor="@android:color/white"
                app:ringProgressColor="@color/colorAccent"
                app:ringWidth="6dp"
                app:style="STROKE"
                app:textColor="@color/colorAccent"
                app:textIsShow="true"
                app:textSize="16sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/controller_right_panel"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/controller_centerShim">

            <TextView
                android:id="@+id/TV_travel_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DISTANCE:     0 M"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/TV_current_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SPEED:            0 KM/H"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"/>

        </LinearLayout>

    </RelativeLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_marginTop="150dp"
        android:padding="50dp"
        android:rotation="270"
        android:maxWidth="800dp"
        android:minWidth="800dp"
        android:max="2000"
        android:progress="1000"
        android:progressBackgroundTintMode="src_over"
        android:visibility="visible"
        android:layout_below="@id/controller_main_container"
        android:paddingTop="200dp"/>

</RelativeLayout>